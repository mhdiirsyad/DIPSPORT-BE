# Database
DATABASE_URL="mysql://root:root@localhost:3306/dipsport"

# Server
PORT=4000
NODE_ENV=development
CORS_ORIGINS="http://localhost:3000"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN=7d

# MinIO Object Storage
MINIO_HOST="localhost"
MINIO_REGION="us-east-1"
MINIO_ACCESS_KEY="your-minio-access-key"
MINIO_SECRET_KEY="your-minio-access-key"
MINIO_BUCKET="bucket_name"

# Default URLs
DEFAULT_ACADEMIC_SURAT_URL="https://example.com/uploads/placeholder-surat.pdf"

# Email Service Configuration (Required for Email Notifications)
# For Gmail, use: smtp.gmail.com
# For Outlook/Hotmail, use: smtp-mail.outlook.com
# For other providers, check their SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email
EMAIL_PASSWORD=your_code_pass_app
EMAIL_FROM_NAME=VENUE UNDIP

# Email Configuration Notes:
# 1. For Gmail: 
#    - Enable 2-factor authentication
#    - Generate an "App Password" from Google Account settings
#    - Use the app password instead of your regular password
# 
# 2. For Outlook/Hotmail:
#    - Use your regular email password
#    - No app password needed
#
# 3. EMAIL_SECURE:
#    - Use 'true' for port 465 (SSL)
#    - Use 'false' for port 587 (TLS/STARTTLS)
